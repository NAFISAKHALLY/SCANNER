<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_5sdp"
    android:layout_margin="@dimen/_5sdp"
    card_view:cardUseCompatPadding="true"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

        <View
            android:layout_width="@dimen/_3sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:background="@color/teal_200" />

        <ImageView
            android:id="@+id/img_barang2"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:src="@color/colorPrimary" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_toRightOf="@id/img_barang2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_nmbrg2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/popsem"
                android:padding="@dimen/_2sdp"
                android:text="AirPods Pro"
                android:textColor="@color/teal_200"
                android:textSize="@dimen/_12sdp" />


            <TextView
                android:id="@+id/tv_kdbrg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:fontFamily="@font/popmed"
                android:text="B0001"
                android:textSize="@dimen/_10sdp" />


            <TextView
                android:id="@+id/tv_jumlah2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/popmed"
                android:text="5"
                android:textSize="@dimen/_10sdp" />


            <TextView
                android:id="@+id/tv_satuan2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/popmed"
                android:text="Unit"
                android:textSize="@dimen/_10sdp" />


            <TextView
                android:id="@+id/tv_harga2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_weight="1"
                android:fontFamily="@font/popmed"
                android:text="Harga"
                android:textSize="@dimen/_10sdp" />


        </LinearLayout>


    </RelativeLayout>







</RelativeLayout>